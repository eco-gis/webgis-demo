{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!app/components/ui"]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"bracketSameLine": true
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},

	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
